<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kg.seeot.mybatis.cart.CartMapper">
	<resultMap type="com.kg.seeot.cart.dto.CartDTO" id="cart">
		<id property="memberId" column="member_id"/>
		<result property="productNo" column="product_no"/>
		<result property="cartPrice" column="cart_price"/>
		<result property="productName" column="product_name"/>
		<result property="productPrice" column="product_price"/>
		<result property="productFile" column="product_file"/>
		<result property="orderStack" column="order_stack"/>
		<result property="cartNum" column="cartnum"/>
		<result property="productSize" column="product_size"/>
		<result property="productColor" column="product_color"/>
	</resultMap>
	
	<insert id="addCart_p">
		insert into cart(product_no,product_name,product_price,product_file,cartNum) select product_no,product_name,product_price,product_file,cartnum_seq.nextval from product
		where product_no=#{product_no}
	</insert>
	<update id="addCart_m">
		update cart set product_size=#{s}, product_color=#{c} where 
	</update>
	
	<update id="addOrderStack">
		update cart set order_stack=#{o} where <!--0915 시퀀스현재값으로 조회해야함 -->
	</update>
	
	<select id="getCart" resultMap="cart">
		select * from cart where member_id=#{member_id}
	</select>
	
	<delete id="deleteCartOne">
		delete from cart where member_id=#{m} and product_no=#{p}
	</delete>
	
	<delete id="deleteChkCart">
		delete from cart where member_id=#{m} and cartnum=#{c}
	</delete>
</mapper>